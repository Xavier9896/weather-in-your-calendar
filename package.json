{
  "name": "weather-in-your-calendar",
  "version": "1.0.0",
  "description": "Weather calendar subscription service",
  "main": "dist/index.js",
  "scripts": {
    "start": "node dist/index.js",
    "dev": "node index.js",
    "build": "rollup -c",
    "clean": "rm -rf dist",
